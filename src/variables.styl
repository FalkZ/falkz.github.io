@import url('https://fonts.googleapis.com/css?family=Lato|Anton')

// Falk Styling
general = true
helper = true
flow = true
// Colors
themePrimary = #2050cc
headerFontColor = white
bodyFontColor = lightgrey
headingFontColor = white
// Background
flowBackgroundColor = #ff4455
headerBackground = rgba(black, .9)
bodyBackground = linear-gradient(135deg, darken(#2050cc, 75%) 0%,black 100%);
// Nav
navDevider = '|'
navSpacing = 30px
headerSpacing = 30px
// Fonts
bodyFont = 'Lato', sans-serif
bodyFontSize = 25px
bodyFontWeight = normal
headingFont = 'Anton', sans-serif
// Padding
sectionPadding = 40px
// Size
headerHeight = 80px
// Shadows
headerShadow = 0 3px 10px rgba(0, 0, 0, .16), 0 2px 12px rgba(0, 0, 0, .23)

// #263039
i.gmar-Joker {
	font-size 80px
	transform rotate(-20deg)

	&#background:before {
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		z-index -1
		color black
		text-importantalign center
		text-shadow 0 3px 10px rgba(0, 0, 0, .16)
		font-size 100vh

		transform rotate(10deg)
	}
}

i.fa {
	margin 0 10px
}

section{
	line-height: 1.5
	display block
	max-width 700px
	margin 0 auto
	margin-top 80px
}

header{
	border-bottom 0.3px solid darken(#2050cc, 85%) !important
}
h2{
	margin-top 1em !important;
	opacity: 1 !important;
	/*&:after{
		content: '';
		border-bottom 3px solid white;
		display: block;
		width: 20px;
	}*/
}

em{
	//font-family Anton
	font-weight bold !important
	//text-transform uppercase
	//font-size 1.2em
	font-style normal

}
.language
	position fixed
	bottom 3px
	right 3px
	font-size 15px
	border 1px solid white

	border-radius 3px

@media screen and (max-width: 1100px){
	   header *{
			 font-size 20px;
			 navSpacing = 10px
			 headerSpacing = 10px
			 headerHeight = 60px

		 }

		header h1{
			 font-size 30px;
		}

	}

a{
	display table

	border-radius 3px
	//border 2px solid white !important
	color white !important
	height 1.3
	line-height 1.3
	width auto
	opacity 1
	padding 0 5px
	margin 5px 0
	transition all 0.3s ease-out !important
	&:hover{
		background white
		color darken(#2050cc, 85%) !important
	}
}
