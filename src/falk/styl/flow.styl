@import '../font/css/falk.css'

.flow
	li
		position relative
		margin 15px 0
		padding-left 10px
		border-left 10px solid flowBackgroundColor

		&:after
			position absolute
			bottom -10px
			left -10px
			display block
			overflow visible
			width 10px
			width 10px
			height 10px
			background-image url('../svg/arrow2.svg')
			background-position 100% 50%
			background-size 10px
			background-repeat no-repeat
			content ''

		&:before
			position absolute
			top -5px
			left -10px
			display block
			overflow visible
			width 10px
			width 10px
			height 10px
			background-image url('../svg/arrow3.svg')
			background-position 100% 50%
			background-size 10px
			background-repeat no-repeat
			content ''

	ul
		list-style none

table.flow
	border-collapse collapse

	td:not(:last-child), th:not(:last-child)
		border-right 1px solid lightgrey

	td, th
		margin 5px
		padding 5px 10px

	td
		*
			margin 0 auto
			padding 5px 10px
			border-radius 5px
			background-color flowBackgroundColor
			color white
			text-align center

		&:not(.none):after, &.top:before, &.right>*:before, &.left>*:after
			display block
			color flowBackgroundColor
			content '\0041'
			text-align center
			font-weight normal
			font-style normal
			font-family 'falk'
			line-height 1
			-webkit-font-smoothing antialiased
			-moz-osx-font-smoothing grayscale

		&.top:before
			margin-top -30px
			height 30px

		&.right>*, &.left>*
			position relative

		&.right>*:before, &.left>*:after
			position absolute
			display inline-block
			line-height 100%

		top 0
		bottom 0
		width 10px

		&.right>*:before
			left 100%
			transform rotate(-90deg)

		&.left>*:after
			right 100%
			transform rotate(90deg)
