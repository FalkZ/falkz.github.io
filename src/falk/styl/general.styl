@import '../../variables.styl'

* {
	font-size bodyFontSize
	font-family bodyFont
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
}

*:not(strong):not(del) {
	text-decoration none
	font-weight bodyFontWeight
}

body {
	overflow-y scroll
	margin 0
	padding 0
}

::-webkit-scrollbar {
	display none
}

blockquote {
	padding-left 10px
	border-left 10px solid themePrimary
}

h1, h2, h3, h4, h5, h6 {
	margin-top 0
	margin-bottom 10px
	font-family headingFont
}

h1 {
	font-size 42px
}

h2 {
	font-size 36px
}

h3 {
	font-size 32px
}

h4 {
	font-size 28px
}

h5 {
	font-size 24px
}

h6 {
	font-size 20px
}

a {
	border-bottom 1px solid transparent
	color themePrimary
	cursor pointer
	transition border .2s ease-out

	&:hover {
		border-bottom-color themePrimary
	}
}

header {
	position fixed
	top 0
	right 0
	left 0
	z-index 5
	padding-left headerSpacing
	min-height headerHeight
	height auto
	box-shadow headerShadow
	line-height headerHeight
}

header>* {
	display inline-block
	margin 0
	margin-right headerSpacing
	height headerHeight
	vertical-align bottom
	white-space nowrap
	line-height headerHeight
}

nav:not(:last-child):after {
	display inline-block
	width navSpacing
	content navDevider
	text-align center
}

nav {
	display inline-block
	margin 0
	cursor pointer
}

section {
	padding sectionPadding
	height auto
}

img {
	max-width 100%
	max-height 100%
}
